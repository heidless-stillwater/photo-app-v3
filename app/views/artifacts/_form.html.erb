
<div class="container col-6">
  <%= form_with(model: artifact) do |form| %>
    <% if artifact.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(artifact.errors.count, "error") %> prohibited this image from being saved:</h2>

        <ul>
          <% artifact.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <form>
      <div class="form-group">
        <%= form.label :name, style: "display: block", class: "flabel" %>
        <%= form.text_field :name %>
      </div>

      <div>
        <%= form.label :artimg, "Attach image" %><br /><br />
        <%= form.file_field :artimg, accept: "image/jpeg,image/gif,image/png" %>
      </div>
      
      <div class="form-group mt-3">
        <%= form.label :picture, style: "display: block", class: "flabel" %>
        <%= form.text_field :picture, class:"form-control" %>
      </div>

      <button type="submit" class="btn btn-primary mt-3">Save Artifact </button>
    </form>

    <div>
      <%= link_to "Back to Artifacts", artifacts_path, class: "btn btn-warning mt-5" %>
    </div>

  <% end %>
</div>