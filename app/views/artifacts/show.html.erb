
<div class="container">
  <h1 class="text-center my-3 text-white">Artifact [<%= @artifact.name %>]</h2>

  <div class="row row-cols-4 justify-content-center">
      <%= render @artifact %>
  </div>

  <div class="d-flex flex-row justify-content-center mt-3">
    <%= link_to "Edit", edit_artifact_path(@artifact), width: 20, class: "btn btn-warning" %>
    <%= link_to "Artifacts", artifacts_path, class: "btn btn-success ms-2" %>
    <%= link_to "Destroy", @artifact, data: { turbo_method: :delete }, class: "btn btn-danger ms-2" %>
  </div>

</div>
